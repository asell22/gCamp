<div class="page-header">
  <div class = "row">
  <div class = "pull-right">
    <%= link_to "All Tasks", tasks_path %>
    | <%= link_to "Incomplete Tasks", tasks_path({completed: false})  %>
    <%= link_to "New Task", new_task_path, class: "btn btn-info" %></button>
  </div>
  </div>
  <h1>Tasks</h1>
</div>


<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
      <th></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <% @tasks.each do |task| %>
  <tbody>

    <tr>
      <td><%= task.description %></td>
      <td><%= task.completed %></td>
      <td><%= task.due_date %></td>
      <td class= "pull-right">
        <%= link_to 'Show', task, class: "btn btn-success" %>
        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info", id: "edit-task-action" %>
        <%= link_to 'Delete', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
