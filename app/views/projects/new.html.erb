
<div class="page-header">
  <h1>Create Project</h1>
</div>

<% if @project.errors.any? %>
<div class = "row">
<div class = "alert alert-danger col-sm-offset-1 col-sm-6">
  <div id="error_explanation">
    <h2><%= pluralize(@project.errors.count, "error") %> prohibited this task from being saved:</h2>

    <ul>
      <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
</div>
<% end %>


<%= form_for @project, html: {class: "form-horizontal"} do |f| %>

<div class="form-group">
  <%= f.label :name, class:"col-sm-1 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>

<div class = "form-group">
  <div class = "actions">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class:  "btn btn-info" %>
      <%= link_to 'Cancel', projects_path, class: "btn btn-default" %>
    </div>
  </div>
</div>



<% end %>
