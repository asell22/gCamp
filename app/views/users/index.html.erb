<% if notice %>
  <div class= "alert alert-success">
    <p class="text-center"><%= notice %></p>
  </div>
<% end %>



<div class="page-header">
  <div class = "pull-right">
    <%= link_to "New User", new_user_path, class: "btn btn-info" %>
  </div>
  <h1>Users</h1>
</div>


<table class = "table table-strip">
  <thead>
    <tr>
      <th>Name</th>
      <!-- <th colspan="3"></th> -->
      <th>Email</th>
      <th></th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to "#{user.first_name} #{user.last_name}", user_path(user)  %></td>
      <td><%= mail_to user.email %></td>

      <td>
        <%= link_to 'Edit', edit_user_path(user), class: "pull-right" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
